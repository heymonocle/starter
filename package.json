  "license": "ISC",
  "author": "",
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean",
    "cleanup": "echo 'Cleaning up node_modules, .next, .vercel, & .turbo folders.' && find . \\( -name 'node_modules' -o -name '.next' -o -name '.turbo' -o -name '.vercel' \\) -type d -prune -exec rm -rf '{}' +",
    "dev": "turbo dev",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json}\"",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "types": "supabase --workdir ./apps/backend gen types typescript --schema public --local > ./apps/app/src/types/database.d.ts"
  },
  "prettier": "@vercel/style-guide/prettier",
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@vercel/style-guide": "^6.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "turbo": "^1.13.3"
  },
  "packageManager": "pnpm@9.0.6",
  "engines": {
    "node": ">=18"
  },
  "volta": {
    "node": "20.12.0"
  }
}
